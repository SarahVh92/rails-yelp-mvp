<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <br>

  <p>Reviews</p>
  <ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> stars
    <br>
    <%= review.content %></li>
    <%= link_to "Delete", review_path(review), data: { turbo_method: :delete, turbo_confirm: "Do you want to delete this review?"} %>
  <% end %>
  </ul>
  <br>

  <%= link_to 'Write a review', new_restaurant_review_path(@restaurant) %> <br>
  <%= link_to 'Back to Restaurants', restaurants_path %>

  <%= render "reviews/new", locals: { restaurant: @restaurant, review: @review }%>
</div>
